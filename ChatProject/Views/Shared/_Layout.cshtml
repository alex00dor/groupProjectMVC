<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-gird"/>
    <link rel="stylesheet" asp-href-include="/css/*.css"/>
    <link rel="stylesheet" href="/lib/fontawesome/css/all.css" />
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/js/signalr.min.js"></script>
    <title>Real-time chat</title>
</head>
<body>
<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark shadow py-lg-2 py-md-0">
        <a class="navbar-brand" href="#">Chat</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Room" asp-action="List">Show all rooms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Room" asp-action="MyRooms">Show my rooms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Room" asp-action="Create">Create a new room</a>
                    </li>
                }
            </ul>
            <div class="d-inline-block my-2 my-lg-0">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-primary my-2 my-sm-0">Sign out</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary my-2 my-sm-0">Sign in</a>
                    <a asp-controller="Account" asp-action="Create" class="btn btn-outline-primary my-2 my-sm-0">Sign up</a>
                }
            </div>
        </div>

    </nav>
</header>
<div class="container-fluid pt-5 h-100">
    @RenderBody()
</div>

<footer class="footer mt-auto py-3 fixed-bottom shadow">
    <div class="container">
        <span class="text-muted">MVC Project at RTC 2019</span>
    </div>
</footer>

</body>
</html>