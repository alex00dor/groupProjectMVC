@using ChatProject.Models.Entities
@model RoomsListModel

<div class="position-sticky container-fluid px-0 pt-2" style="top:48px; right: 0; left: 0; z-index:100;">
    <div class="row">
        <div class="col-12 p-0">
            <div class="input-group input-group-lg text-center">
                <label class="sr-only" for="searchInput">Search</label>
                <input id="searchInput" name="text" type="text" class="form-control message-input px-5" placeholder="Search...">
                <button id="sendButton" type="submit" class="btn btn-info message-input-btn">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-wrap justify-content-center p-3">
    @foreach (Room room in Model.Rooms)
    {
        @Html.Partial("RoomSummary", room)
    }
</div>

<ul page-model="@Model.PagingInfo" page-action="index" page-previous-next = "true"
    page-class-link="page-link" page-class-normal="page-item" 
    page-class-selected="page-item active" page-class-disabled="page-item disabled" class="pagination px-4" style="margin-bottom: 70px;">
</ul>